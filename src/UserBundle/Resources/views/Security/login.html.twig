{% extends "FOSUserBundle::layout.html.twig" %}

{% trans_default_domain 'FOSUserBundle' %}

{% block fos_user_content %}
<div class="div-password1">
    <div class="btn-close"><span class="exit-big">&nbsp;</span></div>
    <div class="div-password1_title">Авторизация</div>
    <form id="login-form" action="{{ path("fos_user_security_check") }}" method="post">
        <div>
            {% if error %}
                <div class="orange_delete">Неверный e-mail или пароль</div>
            {% endif %}
        </div>
        <input type="hidden" name="_csrf_token" value="{{ csrf_token }}" />
        <div class="div-registration_e-mail">
        E-mail<br>
        <input type="text" id="username" name="_username" value="{{ last_username }}" required="required" />
        </div>
        <div class="div-registration_e-mail">
        Пароль<br>
        <input type="password" id="password" name="_password" required="required" />
       </div>
        <input type="checkbox" id="remember_me" name="_remember_me" value="on" />
        Запомнить меня
        <br><br>
        <input class="orange-43" type="button" id="_submit" name="_submit" value="Войти" />
    </form>
</div>
{% endblock fos_user_content %}
